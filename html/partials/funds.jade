form(method="POST")
  table.table.table-striped.table-hover
    thead
      tr
        th Symbol
        th Name
        th Actions
    tbody
      tr(template="ngFor #thisFund of (modelState.funds.data | values); trackBy:trackFundById" bind-wcir-fund="thisFund")
    tfoot
      tr
        td
          input.form-control(bindon-ngModel="newFund.symbol", on-ngModelChange="newFund.symbol = newFund.symbol.toUpperCase()")
        td
          input.form-control(bindon-ngModel="newFund.name")
        td
          button.btn.btn-success(type="submit", on-click="create()") Add
          button.btn.btn-danger(type="button", on-click="clearNew()") Clear

